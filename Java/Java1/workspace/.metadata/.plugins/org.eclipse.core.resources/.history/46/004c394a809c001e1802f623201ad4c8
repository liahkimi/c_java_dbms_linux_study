		System.out.println("주민번호 뒷자리를 입력(한자리) >>");
		idNum = sc.nextInt();
		String day = null;
		if(idNum==1 || idNum ==6) {
			day = "월";
		}else if(idNum==2 || idNum ==7) {
			day = "화";
		}
		else if(idNum==3 || idNum ==8) {
			day = "수";
		}else if(idNum==4 || idNum ==9) {
			day = "목";
		}else if(idNum==5 || idNum ==0) {
			day = "금";
